<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Mongo Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="/">Home</a>
            <a class="nav-item nav-link active" href="/saved">Saved Articles
                <span class="sr-only">(current)</span>
            </a>
            <button href="/saved" type="button" class="btn btn-danger" id="scrape">Scrape NYT</button>
        </div>
    </div>
</nav>
<div class="container-fluid">
        <div class="jumbotron text-center background-image">
            <div class="overlay">
                <div class="caption">
                    <h1 class="display-1 text-white">NYT Scraper</h1>
                </div>
            </div>
        </div>
    <div class=row>
        <div class="col-12">
            {{#each articles}}
                <div class="card w-90">
                    <div class="card-header text-white bg-primary">
                        <a href={{link}} target="_blank" class="text-white">
                            <h2>{{title}}</h2>
                        </a>
                    </div>
                    <div class="card-body">
                        
                        <button data="{{_id}}" class="btn btn-danger delete-btn">Delete Saved</button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
